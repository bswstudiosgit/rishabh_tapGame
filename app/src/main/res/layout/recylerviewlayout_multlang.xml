<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:id="@+id/multilanglayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/paddingsizevalue"
    >
    <TextView

        android:id="@+id/languagetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language1"
        android:textSize="@dimen/textsizevalue"

        android:layout_weight="1"
        />
    <RadioButton
        android:layout_marginLeft="@dimen/marginvalue2"
        android:layout_width="@dimen/width1"
        android:layout_height="@dimen/height1"
        android:id="@+id/unticked"
        />

</LinearLayout>
    <View
        android:layout_marginTop="@dimen/marginvalue3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor" />

</LinearLayout>